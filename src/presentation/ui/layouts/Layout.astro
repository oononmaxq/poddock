---
import { ViewTransitions } from 'astro:transitions';
import '../../../styles/global.css';
import { getLangFromUrl, useTranslations } from '../../../i18n/translations';
import { ToastContainer } from '../components/Toast';

interface Props {
  title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const pathname = Astro.url.pathname;

// Helper to check if path is active
const isActive = (path: string) => {
  return pathname.startsWith(path);
};

const podcastsPath = lang === 'ja' ? '/podcasts' : `/${lang}/podcasts`;
const helpPath = lang === 'ja' ? '/help/distribution' : `/${lang}/help/distribution`;
const settingsPath = lang === 'ja' ? '/settings' : `/${lang}/settings`;
---

<!doctype html>
<html lang={lang} data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | poddock</title>
    <ViewTransitions />
    <script is:inline>
      // Apply saved theme immediately to prevent flash
      (function() {
        const savedTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', savedTheme);
      })();

      // Re-apply theme after View Transitions swap
      document.addEventListener('astro:after-swap', function() {
        const savedTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', savedTheme);
      });
    </script>
  </head>
  <body class="min-h-screen bg-base-100">
    <div class="drawer lg:drawer-open">
      <input id="drawer-toggle" type="checkbox" class="drawer-toggle" />

      <div class="drawer-content flex flex-col">
        <!-- Header -->
        <header class="navbar bg-base-100 border-b border-base-200 lg:hidden">
          <div class="flex-none">
            <label for="drawer-toggle" class="btn btn-square btn-ghost">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </label>
          </div>
          <div class="flex-1">
            <a href="/" class="btn btn-ghost text-xl font-bold">poddock</a>
          </div>
        </header>

        <!-- Main content -->
        <main class="flex-1">
          <slot />
        </main>
      </div>

      <!-- Sidebar -->
      <div class="drawer-side">
        <label for="drawer-toggle" aria-label="close sidebar" class="drawer-overlay"></label>
        <aside class="bg-base-200 w-64 min-h-full flex flex-col">
          <div class="p-4 border-b border-base-300">
            <a href={podcastsPath} class="text-xl font-bold">poddock</a>
          </div>
          <nav class="flex-1 p-4">
            <ul class="menu">
              <li>
                <a href={podcastsPath} class:list={["flex items-center gap-2", { active: isActive(podcastsPath) && !pathname.includes('/help') && !pathname.includes('/settings') }]}>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                  </svg>
                  {t('nav.dashboard')}
                </a>
              </li>
              <li>
                <a href={helpPath} class:list={["flex items-center gap-2", { active: isActive(helpPath) }]}>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {t('nav.distributionHelp')}
                </a>
              </li>
            </ul>
          </nav>
          <div class="p-4 border-t border-base-300 space-y-2">
            <a href={settingsPath} class:list={["btn btn-ghost btn-sm w-full justify-start", { "btn-active": isActive(settingsPath) }]}>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              {t('nav.settings')}
            </a>
            <button type="button" id="logout-btn" class="btn btn-ghost btn-sm w-full justify-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              {t('nav.logout')}
            </button>
            <script>
              document.getElementById('logout-btn')?.addEventListener('click', () => {
                localStorage.removeItem('access_token');
                window.location.href = '/login';
              });
            </script>
          </div>
        </aside>
      </div>
    </div>
    <ToastContainer client:load />
  </body>
</html>
