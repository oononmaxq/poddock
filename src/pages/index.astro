---
import { getLangFromUrl } from '../i18n/translations';
import Footer from '../components/Footer.astro';

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang} data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>PODDOCK - ポッドキャストをどこにでも配信</title>
    <script is:inline>
      const savedTheme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', savedTheme);
    </script>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Zen+Kaku+Gothic+New:wght@400;500;700&display=swap');
      body { font-family: 'Space Grotesk', 'Zen Kaku Gothic New', sans-serif; }

      /* Smooth wave animation */
      .wave-bg {
        position: absolute;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
      }
      .wave-bg svg {
        position: absolute;
        bottom: 0;
        width: 200%;
        height: 300px;
        opacity: 0.1;
      }
      .wave-bg .wave1 {
        animation: wave-flow 8s linear infinite;
      }
      .wave-bg .wave2 {
        animation: wave-flow 12s linear infinite reverse;
        opacity: 0.07;
      }
      .wave-bg .wave3 {
        animation: wave-flow 10s linear infinite;
        opacity: 0.05;
      }
      @keyframes wave-flow {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
      }

      /* Fade-in animation on scroll */
      .fade-in-card {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }
      .fade-in-card.visible {
        opacity: 1;
        transform: translateY(0);
      }

      /* Animate section elements */
      .animate-fade-up {
        opacity: 0;
        transform: translateY(40px);
        transition: opacity 0.7s ease-out, transform 0.7s ease-out;
      }
      .animate-fade-up.visible {
        opacity: 1;
        transform: translateY(0);
      }

      /* Platform logos animation */
      .animate-platform {
        opacity: 0;
        transform: scale(0.8);
        transition: opacity 0.5s ease-out, transform 0.5s ease-out;
      }
      .animate-platform.visible {
        opacity: 0.6;
        transform: scale(1);
      }

      /* Solution card slide-in */
      .animate-slide-up {
        opacity: 0;
        transform: translateY(60px);
        transition: opacity 0.8s ease-out, transform 0.8s ease-out;
      }
      .animate-slide-up.visible {
        opacity: 1;
        transform: translateY(0);
      }

      /* Step items animation */
      .animate-step {
        opacity: 0;
        transform: translateX(-20px);
        transition: opacity 0.5s ease-out, transform 0.5s ease-out;
      }
      .animate-step.visible {
        opacity: 1;
        transform: translateX(0);
      }

      /* Hero animations - run on page load */
      @keyframes hero-title {
        0% {
          opacity: 0;
          transform: translateY(40px) scale(0.95);
          filter: blur(10px);
        }
        100% {
          opacity: 1;
          transform: translateY(0) scale(1);
          filter: blur(0);
        }
      }

      @keyframes hero-subtitle {
        0% {
          opacity: 0;
          transform: translateY(30px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes hero-cta {
        0% {
          opacity: 0;
          transform: scale(0.8);
        }
        50% {
          transform: scale(1.05);
        }
        100% {
          opacity: 1;
          transform: scale(1);
        }
      }

      @keyframes hero-badge {
        0% {
          opacity: 0;
          transform: translateY(20px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes float {
        0%, 100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-10px);
        }
      }

      .hero-title {
        animation: hero-title 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      }

      .hero-subtitle {
        opacity: 0;
        animation: hero-subtitle 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.3s forwards;
      }

      .hero-cta {
        opacity: 0;
        animation: hero-cta 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) 0.6s forwards;
      }

      .hero-cta:hover {
        opacity: 1;
        animation: float 2s ease-in-out infinite;
      }

      .hero-badge {
        opacity: 0;
      }
      .hero-badge-1 { animation: hero-badge 0.5s ease-out 0.9s forwards; }
      .hero-badge-2 { animation: hero-badge 0.5s ease-out 1.0s forwards; }
      .hero-badge-3 { animation: hero-badge 0.5s ease-out 1.1s forwards; }
      .hero-badge-4 { animation: hero-badge 0.5s ease-out 1.2s forwards; }

      .hero-label {
        opacity: 0;
        animation: hero-subtitle 0.5s ease-out 0.8s forwards;
      }
    </style>
  </head>
  <body class="min-h-screen bg-base-100">
    <!-- Header -->
    <header class="navbar bg-base-100 border-b border-base-200 px-4 sm:px-6 lg:px-12">
      <div class="flex-1">
        <a href="/" class="flex items-center gap-2 text-xl sm:text-2xl font-bold">
          <img src="/logo.png" alt="PODDOCK" class="w-8 h-8 sm:w-10 sm:h-10" />
          PODDOCK
        </a>
      </div>
      <div class="flex-none gap-2">
        <a href="/login" class="btn btn-ghost btn-sm sm:btn-md">ログイン</a>
      </div>
    </header>

    <!-- Hero -->
    <section class="min-h-[calc(100vh-4rem)] flex flex-col justify-center px-4 sm:px-6 lg:px-12 py-8 text-center relative overflow-hidden">
      <!-- Background images -->
      <img src="/top_hero_1.png" alt="" class="absolute bottom-0 left-0 w-1/5 max-w-md object-contain pointer-events-none" />
      <img src="/top_hero_2.png" alt="" class="absolute bottom-0 right-0 w-1/5 max-w-md object-contain pointer-events-none" />
      <div class="relative z-10 px-2">
        <h1 class="text-3xl sm:text-4xl lg:text-6xl font-bold mb-6 leading-tight hero-title">
          番組運営を、<br class="sm:hidden" />もっとシンプルに。
        </h1>
        <p class="text-base sm:text-xl text-base-content/70 mb-8 max-w-2xl mx-auto leading-relaxed hero-subtitle">
          Spotify、Apple Podcasts、<br class="sm:hidden" />Amazon Music、YouTube Music など<br class="hidden sm:inline" />
          主要プラットフォームへ簡単に音声配信。<br />
          ホスティングから分析まで、<br class="sm:hidden" />すべてを一箇所で管理。
        </p>
        <div class="flex justify-center gap-4 mb-10 sm:mb-12">
          <a href="/login" class="btn btn-primary btn-md sm:btn-lg hero-cta">無料で始める</a>
        </div>
        <div class="flex flex-col items-center gap-4">
          <span class="text-sm text-base-content/60 hero-label">配信先:<span class="text-xs ml-2">（順次追加予定）</span></span>
          <div class="grid grid-cols-2 sm:flex sm:flex-wrap justify-center items-center gap-4 sm:gap-6">
            <img src="/badges/spotify.svg" alt="Listen on Spotify" class="h-8 sm:h-10 mx-auto hero-badge hero-badge-1" />
            <img src="/badges/apple-podcasts.svg" alt="Listen on Apple Podcasts" class="h-8 sm:h-10 mx-auto hero-badge hero-badge-2" />
            <img src="/badges/amazon-music.svg" alt="Listen on Amazon Music" class="h-8 sm:h-10 mx-auto hero-badge hero-badge-3" />
            <img src="/badges/youtube-music.svg" alt="Listen on YouTube Music" class="h-8 sm:h-10 mx-auto hero-badge hero-badge-4" />
          </div>
        </div>
      </div>
    </section>

    <!-- What? - Problem -->
    <section class="min-h-screen py-16 sm:py-24 px-4 sm:px-6 lg:px-12 bg-base-200 flex items-center">
      <div class="max-w-4xl mx-auto w-full">
        <!-- Problem Statement -->
        <div class="text-center mb-8 sm:mb-12">
          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold mb-4 leading-tight animate-fade-up">
            リスナーに届けるなら、<br class="sm:hidden" />全部に配信したい。
          </h2>
          <p class="text-base sm:text-xl text-base-content/70 animate-fade-up" data-delay="200">でも、それぞれ管理するのは大変...</p>
        </div>

        <!-- Platform logos showing the complexity -->
        <div class="card bg-base-100 mb-8 sm:mb-12 animate-fade-up" data-delay="400">
          <div class="card-body p-4 sm:p-8">
            <div class="grid grid-cols-2 sm:flex sm:flex-wrap justify-center items-center gap-3 sm:gap-6 mb-4 sm:mb-6">
              <img src="/badges/spotify.svg" alt="Spotify" class="h-8 sm:h-10 mx-auto animate-platform" data-delay="600" />
              <img src="/badges/apple-podcasts.svg" alt="Apple Podcasts" class="h-8 sm:h-10 mx-auto animate-platform" data-delay="750" />
              <img src="/badges/amazon-music.svg" alt="Amazon Music" class="h-8 sm:h-10 mx-auto animate-platform" data-delay="900" />
              <img src="/badges/youtube-music.svg" alt="YouTube Music" class="h-8 sm:h-10 mx-auto animate-platform" data-delay="1050" />
            </div>
            <p class="text-center text-sm sm:text-base text-base-content/70 animate-fade-up" data-delay="1200">それぞれに登録して、<br class="sm:hidden" />それぞれの管理画面で確認して...</p>
          </div>
        </div>

        <!-- Solution -->
        <div class="bg-primary/10 rounded-2xl p-5 sm:p-8 text-center animate-slide-up" data-delay="1400">
          <p class="text-lg sm:text-2xl font-bold text-primary mb-5 sm:mb-6">
            PODDOCKなら、<br class="sm:hidden" />ひとつの画面ですべて管理。
          </p>
          <div class="flex flex-col sm:flex-row justify-center items-center gap-3 sm:gap-8 mb-5 sm:mb-6">
            <div class="flex items-center gap-3 animate-step" data-delay="1700">
              <span class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-primary text-primary-content flex items-center justify-center font-bold text-sm sm:text-base">1</span>
              <span class="text-sm sm:text-base">番組を作る</span>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content/30 hidden sm:block animate-step" data-delay="1850" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <div class="flex items-center gap-3 animate-step" data-delay="2000">
              <span class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-primary text-primary-content flex items-center justify-center font-bold text-sm sm:text-base">2</span>
              <span class="text-sm sm:text-base">配信先に登録<span class="text-xs text-base-content/50 ml-1">（初回のみ）</span></span>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content/30 hidden sm:block animate-step" data-delay="2150" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <div class="flex items-center gap-3 animate-step" data-delay="2300">
              <span class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-primary text-primary-content flex items-center justify-center font-bold text-sm sm:text-base">3</span>
              <span class="text-sm sm:text-base">エピソードを公開</span>
            </div>
          </div>
          <p class="text-sm sm:text-base text-base-content/70 animate-fade-up" data-delay="2500">あとは音声をアップするたびに、<br class="sm:hidden" />自動で全プラットフォームに配信。</p>
        </div>
      </div>
    </section>

    <!-- Features -->
    <section class="min-h-screen flex flex-col justify-center py-12 sm:py-16 px-4 sm:px-6 lg:px-12 bg-base-100">
      <div class="max-w-6xl mx-auto w-full">
        <h2 class="text-2xl sm:text-3xl font-bold text-center mb-8 sm:mb-12">主な機能</h2>
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4 sm:gap-8">
          <div class="card bg-base-100 fade-in-card">
            <div class="card-body p-4 sm:p-6">
              <div class="w-10 h-10 sm:w-12 sm:h-12 mb-3 sm:mb-4 text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 16.5V9.75m0 0 3 3m-3-3-3 3M6.75 19.5a4.5 4.5 0 0 1-1.41-8.775 5.25 5.25 0 0 1 10.233-2.33 3 3 0 0 1 3.758 3.848A3.752 3.752 0 0 1 18 19.5H6.75Z" />
                </svg>
              </div>
              <h3 class="card-title text-base sm:text-lg">簡単アップロード</h3>
              <p class="text-sm sm:text-base text-base-content/70">音声ファイルをドラッグ&ドロップするだけ。自動でRSSフィードを生成。</p>
            </div>
          </div>
          <div class="card bg-base-100 fade-in-card">
            <div class="card-body p-4 sm:p-6">
              <div class="w-10 h-10 sm:w-12 sm:h-12 mb-3 sm:mb-4 text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12.75 3.03v.568c0 .334.148.65.405.864l1.068.89c.442.369.535 1.01.216 1.49l-.51.766a2.25 2.25 0 0 1-1.161.886l-.143.048a1.107 1.107 0 0 0-.57 1.664c.369.555.169 1.307-.427 1.605L9 13.125l.423 1.059a.956.956 0 0 1-1.652.928l-.679-.906a1.125 1.125 0 0 0-1.906.172L4.5 15.75l-.612.153M12.75 3.031a9 9 0 1 0 6.712 14.374M12.75 3.03V1.5m0 1.53v.568" />
                </svg>
              </div>
              <h3 class="card-title text-base sm:text-lg">どこにでも配信</h3>
              <p class="text-sm sm:text-base text-base-content/70">Spotify、Apple Podcasts、Amazon Musicなど主要プラットフォームに対応。</p>
            </div>
          </div>
          <div class="card bg-base-100 fade-in-card">
            <div class="card-body p-4 sm:p-6">
              <div class="w-10 h-10 sm:w-12 sm:h-12 mb-3 sm:mb-4 text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
                </svg>
              </div>
              <h3 class="card-title text-base sm:text-lg">分析ダッシュボード</h3>
              <p class="text-sm sm:text-base text-base-content/70">再生数、リスナー数、人気エピソードをリアルタイムで確認。</p>
            </div>
          </div>
          <div class="card bg-base-100 fade-in-card">
            <div class="card-body p-4 sm:p-6">
              <div class="w-10 h-10 sm:w-12 sm:h-12 mb-3 sm:mb-4 text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
                </svg>
              </div>
              <h3 class="card-title text-base sm:text-lg">プライベート配信</h3>
              <p class="text-sm sm:text-base text-base-content/70">社内向け、有料会員向けなど限定配信にも対応。</p>
            </div>
          </div>
          <div class="card bg-base-100 fade-in-card">
            <div class="card-body p-4 sm:p-6">
              <div class="w-10 h-10 sm:w-12 sm:h-12 mb-3 sm:mb-4 text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 0 0-5.78 1.128 2.25 2.25 0 0 1-2.4 2.245 4.5 4.5 0 0 0 8.4-2.245c0-.399-.078-.78-.22-1.128Zm0 0a15.998 15.998 0 0 0 3.388-1.62m-5.043-.025a15.994 15.994 0 0 1 1.622-3.395m3.42 3.42a15.995 15.995 0 0 0 4.764-4.648l3.876-5.814a1.151 1.151 0 0 0-1.597-1.597L14.146 6.32a15.996 15.996 0 0 0-4.649 4.763m3.42 3.42a6.776 6.776 0 0 0-3.42-3.42" />
                </svg>
              </div>
              <h3 class="card-title text-base sm:text-lg">カスタマイズ</h3>
              <p class="text-sm sm:text-base text-base-content/70">番組ページをブランドに合わせてカスタマイズ。</p>
            </div>
          </div>
          <div class="card bg-base-100 fade-in-card">
            <div class="card-body p-4 sm:p-6">
              <div class="w-10 h-10 sm:w-12 sm:h-12 mb-3 sm:mb-4 text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z" />
                </svg>
              </div>
              <h3 class="card-title text-base sm:text-lg">高速配信</h3>
              <p class="text-sm sm:text-base text-base-content/70">グローバルCDNで世界中のリスナーに高速配信。</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing -->
    <section class="min-h-screen flex flex-col justify-center py-12 sm:py-20 px-4 sm:px-6 lg:px-12 bg-base-200">
      <div class="max-w-6xl mx-auto w-full">
        <div class="text-center mb-8 sm:mb-12">
          <h2 class="text-2xl sm:text-3xl font-bold mb-3 sm:mb-4">料金プラン</h2>
          <p class="text-base sm:text-xl text-base-content/70 mb-6 sm:mb-8">あなたのポッドキャストに<br class="sm:hidden" />最適なプランを選択</p>

          <!-- Monthly/Yearly Toggle -->
          <div class="flex justify-center items-center gap-3 sm:gap-4 mb-4">
            <span class="text-sm sm:text-base text-base-content/70">月払い</span>
            <input type="checkbox" id="billing-toggle" class="toggle toggle-primary toggle-sm sm:toggle-md" checked />
            <span class="text-sm sm:text-base text-base-content/70">年払い<span class="badge badge-success badge-xs sm:badge-sm ml-1 sm:ml-2">2ヶ月お得</span></span>
          </div>
        </div>

        <!-- Pricing Cards -->
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4 sm:gap-8">
          <!-- Free -->
          <div class="card bg-base-200 fade-in-card">
            <div class="card-body text-center">
              <h3 class="text-lg font-semibold">Free</h3>
              <div class="my-4">
                <span class="text-4xl font-bold">¥0</span>
              </div>
              <ul class="text-left space-y-3 text-sm">
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-success flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  <span><strong>2番組</strong>まで</span>
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-success flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  <span><strong>10エピソード</strong>/番組</span>
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-success flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  <span><strong>10,000</strong> 再生/月</span>
                </li>
              </ul>
              <div class="mt-auto pt-6">
                <a href="/login" class="btn btn-primary w-full">無料で始める</a>
              </div>
            </div>
          </div>

          <!-- Starter (準備中) -->
          <div class="card bg-base-200 fade-in-card relative overflow-hidden">
            <div class="card-body text-center blur-[2px] opacity-60 select-none">
              <h3 class="text-lg font-semibold">Starter</h3>
              <div class="my-4">
                <span class="text-4xl font-bold price-monthly hidden">¥1,180</span>
                <span class="text-4xl font-bold price-yearly">¥980</span>
                <span class="text-base-content/70">/月</span>
              </div>
              <ul class="text-left space-y-3 text-sm">
                <li class="flex items-center gap-2">
